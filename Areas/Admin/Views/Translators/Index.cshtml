@model IEnumerable<BookShop.Models.Translator>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Family)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Family)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TranslatorID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.TranslatorID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.TranslatorID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
